<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- ===================== CONTEÃšDO PRINCIPAL ===================== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <!-- TOOLBAR SIMPLIFICADA -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#6200EE"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/ic_menu"
            app:title="Dashboard PISaude"
            app:titleTextColor="@android:color/white"/>

        <!-- SCROLLVIEW PARA CONTEÃšDO -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CARTAZ DE BEM-VINDO -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="#6200EE">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘‹ Bem-vindo!"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvWelcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ServiÃ§o automÃ¡tico de SMS"
                            android:textColor="#CCFFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tvLastUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ãšltima atualizaÃ§Ã£o: Nunca"
                            android:textColor="#99FFFFFF"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CONTROLE DO SERVIÃ‡O AUTOMÃTICO -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”„ Controle do ServiÃ§o AutomÃ¡tico"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            android:layout_marginBottom="16dp"/>

                        <!-- BOTÃ•ES DE CONTROLE EM LINHA -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:weightSum="2">

                            <!-- BOTÃƒO INICIAR -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="#4CAF50"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp"
                                    android:gravity="center"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â–¶"
                                        android:textSize="32sp"
                                        android:textColor="@android:color/white"
                                        android:layout_marginBottom="8dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="INICIAR"
                                        android:textSize="14sp"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"/>

                                    <Button
                                        android:id="@+id/btnStartService"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:visibility="gone"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- BOTÃƒO PARAR -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                app:cardBackgroundColor="#F44336"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp"
                                    android:gravity="center"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â¹"
                                        android:textSize="32sp"
                                        android:textColor="@android:color/white"
                                        android:layout_marginBottom="8dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="PARAR"
                                        android:textSize="14sp"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"/>

                                    <Button
                                        android:id="@+id/btnStopService"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:visibility="gone"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- BOTÃƒO TESTAR CICLO -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:cardBackgroundColor="#FF9800"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ”„"
                                    android:textSize="28sp"
                                    android:textColor="@android:color/white"
                                    android:layout_marginEnd="12dp"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="TESTAR CICLO AGORA"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold"/>

                                <Button
                                    android:id="@+id/btnTestAuto"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:visibility="gone"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- STATUS DO SERVIÃ‡O -->
                        <LinearLayout
                            android:id="@+id/layoutServiceStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="16dp"
                            android:padding="14dp"
                            android:background="#E8F5E9"
                            android:visibility="visible"
                            android:backgroundTint="#E8F5E9"
                            app:backgroundTint="#E8F5E9">

                            <TextView
                                android:id="@+id/ivServiceStatus"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="â—"
                                android:textSize="20sp"
                                android:textColor="#4CAF50"
                                android:gravity="center"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:id="@+id/tvServiceStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ServiÃ§o automÃ¡tico ativo"
                                android:textSize="13sp"
                                android:textColor="#388E3C"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvServiceTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PrÃ³ximo ciclo: 15 min"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:visibility="gone"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- AÃ‡Ã•ES RÃPIDAS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AÃ§Ãµes RÃ¡pidas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="#212121"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/cardLoadPatients">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="ðŸ‘¥"
                                android:textSize="32sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carregar\nPacientes"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:textColor="#757575"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/cardSendSMS">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="ðŸ’¬"
                                android:textSize="32sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enviar\nTodos SMS"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:textColor="#757575"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- ESTATÃSTICAS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EstatÃ­sticas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="#212121"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_marginBottom="24dp">

                    <!-- CARD TOTAL -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#4CAF50">

                            <TextView
                                android:id="@+id/tvTotalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Pacientes"
                                android:textSize="12sp"
                                android:textColor="#CCFFFFFF"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD INICIADOS -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#2196F3">

                            <TextView
                                android:id="@+id/tvIniciadosCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estado inicial"
                                android:textSize="12sp"
                                android:textColor="#CCFFFFFF"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD FALTOSOS -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#FF9800">

                            <TextView
                                android:id="@+id/tvFaltososCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Faltosos"
                                android:textSize="12sp"
                                android:textColor="#CCFFFFFF"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD ABANDONO -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#E91E63">

                            <TextView
                                android:id="@+id/tvAbandonoCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Abandono"
                                android:textSize="12sp"
                                android:textColor="#CCFFFFFF"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD LEVANTAMENTO -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#9C27B0">

                            <TextView
                                android:id="@+id/tvLevantamentoCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Levantamento"
                                android:textSize="12sp"
                                android:textColor="#CCFFFFFF"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD CHAMADAS -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#3F51B5">

                            <TextView
                                android:id="@+id/tvChamadasCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chamadas"
                                android:textSize="12sp"
                                android:textColor="#CCFFFFFF"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <!-- SEÃ‡ÃƒO DE LOGS DO SISTEMA -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLogs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/layoutLogs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“‹ Logs do Sistema"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#6200EE"
                            android:layout_marginBottom="12dp"/>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@android:color/white"
                            android:padding="8dp"
                            android:scrollbars="vertical">

                            <TextView
                                android:id="@+id/tvLogs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aguardando aÃ§Ãµes..."
                                android:textSize="12sp"
                                android:textColor="#424242"
                                android:lineSpacingExtra="2dp"
                                android:fontFamily="monospace"/>
                        </ScrollView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Logs em tempo real"
                                android:textSize="11sp"
                                android:textColor="#757575"/>

                            <TextView
                                android:id="@+id/tvLogsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 logs"
                                android:textSize="11sp"
                                android:textColor="#6200EE"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- STATUS E PROGRESSO -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status do Sistema"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pronto para carregar pacientes"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tvStats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nenhum dado carregado"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"
                            android:layout_marginTop="4dp"/>

                        <!-- PROGRESSO DE ENVIO -->
                        <LinearLayout
                            android:id="@+id/layoutProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Progresso de Envio"
                                android:textSize="14sp"
                                android:textColor="#757575"/>

                            <ProgressBar
                                android:id="@+id/progressBarBulk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_marginTop="8dp"
                                android:progressTint="#6200EE"/>

                            <TextView
                                android:id="@+id/tvProgress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/0 enviados"
                                android:textSize="12sp"
                                android:textColor="#9E9E9E"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- PROGRESS BAR GERAL -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:visibility="gone"
                    android:progressTint="#6200EE"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- ===================== MENU LATERAL SIMPLIFICADO ===================== -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/nav_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>