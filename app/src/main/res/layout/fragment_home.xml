<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alo Saúde"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Estatísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Pacientes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tv_patient_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pacientes"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- SMS Hoje -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tv_sms_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMS Hoje"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botões de Ação -->
        <Button
            android:id="@+id/btn_send_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar SMS"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btn_view_patients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Pacientes"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btn_templates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modelos de Mensagem"
            style="@style/Widget.Material3.Button" />

        <!-- Loading Progress (Opcional) -->
        <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>